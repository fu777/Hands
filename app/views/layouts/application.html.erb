<!DOCTYPE html>
<html>
  <head>
    <title>Hands</title>
    <!--<meta name="viewport" content="width=device-width,initial-scale=1">-->
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.css">
    <script src="https://unpkg.com/swiper/swiper-bundle.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <div class="col-12">
          <div class="row">
            <div class ="my-3 col-12 d-flex justify-content-center">
              <%= link_to 'ゲストログイン（閲覧用）', public_guest_sign_in_path, method: :post, class: 'mr-1' %>
              <%= link_to '管理者ゲストログイン（閲覧用）', admin_guest_sign_in_path, method: :post, class: 'ml-1' %>
            </div>
          </div>
          <div class="row d-flex justify-content-center">
            <div class ="col-lg-2 col-sm-4">
              <%= link_to root_path, class: 'head' do %>
                <h1 class="orange text-left">Hands</h1>
              <% end %>
            </div>
            <% if customer_signed_in? %>
            <div class ="col-lg-8 col-sm-8 mt-3">
              <div class="row">
                <div class="col-12 d-flex justify-content-end">
                  <%= link_to my_page_path(current_customer), class: 'head' do %>
                    <i class="fas fa-user-circle f-30 mr-2"></i>
                  <% end %>
                  <%= link_to destroy_customer_session_path, method: :delete, class: 'head' do %>
                    <i class="fas fa-sign-out-alt f-30 mr-2"></i>
                  <% end %>
                  <%= link_to carts_path, class: 'head' do %>
                    <i class="fas fa-shopping-cart f-30"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="row d-flex justify-content-center">
            <div class="col-lg-10">
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
              aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
              </button>
              <div class="navbar-collapse collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                  <li class="mr-2">
                    <%= link_to "作品一覧", items_path, class: 'btn btn-outline-secondary' %>
                  </li>
                  <li class="mr-2">
                    <%= link_to "ショップ一覧", shops_path, class: 'btn btn-outline-secondary' %>
                  </li>
                  <li class="mr-2">
                    <%= link_to "ブログ一覧", blogs_path, class: 'btn btn-outline-secondary' %>
                  </li>
                  <li>
                    <%= link_to "ユーザー一覧", index_path, class: 'btn btn-outline-secondary' %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
            <% elsif admin_signed_in? %>
            <div class ="col-lg-8 col-sm-8 mt-3">
              <div class="row">
                <div class="col-12 d-flex justify-content-end">
                  <%= link_to destroy_admin_session_path, method: :delete, class: 'head' do %>
                    <i class="fas fa-sign-out-alt f-30 mr-2"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="row d-flex justify-content-center">
            <div class="col-lg-10">
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
              aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
              </button>
              <div class="navbar-collapse collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                  <li class="mr-2">
                    <%= link_to "作品一覧", items_path, class: 'btn btn-outline-secondary' %>
                  </li>
                  <li class="mr-2">
                    <%= link_to "レビュ一覧", admin_reviews_path, class: 'btn btn-outline-secondary' %>
                  </li>
                  <li class="mr-2">
                    <%= link_to "ショップ一覧", shops_path, class: 'btn btn-outline-secondary' %>
                  </li>
                  <li class="mr-2">
                    <%= link_to "ブログ一覧", blogs_path, class: 'btn btn-outline-secondary' %>
                  </li>
                  <li class="mr-2">
                    <%= link_to "ブログコメント一覧", admin_blog_comments_path, class: 'btn btn-outline-secondary' %>
                  </li>
                  <li class="mr-2">
                    <%= link_to "ユーザー一覧", admin_customers_path, class: 'btn btn-outline-secondary' %>
                  </li>
                  <li>
                    <%= link_to "注文履歴一覧", admin_root_path, class: 'btn btn-outline-secondary' %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
            <% else %>
            <div class ="col-lg-8 col-sm-8 mt-3">
              <div class="row">
                <div class="col-12 d-flex justify-content-end">
                  <%= link_to new_customer_registration_path, class: 'head' do %>
                    <i class="fas fa-sign-in-alt f-30 mr-2"></i>
                  <% end %>
                  <%= link_to new_customer_session_path, class: 'head' do %>
                    <i class="fas fa-user-plus f-30 mr-2"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="row d-flex justify-content-center">
            <div class="col-lg-10">
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
              aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
              </button>
              <div class="navbar-collapse collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                  <li class="mr-2">
                    <%= link_to "About", about_path, class: 'btn btn-outline-secondary' %>
                  </li>
                  <li class="mr-2">
                    <%= link_to "作品一覧", items_path, class: 'btn btn-outline-secondary' %>
                  </li>
                  <li class="mr-2">
                    <%= link_to "ショップ一覧", shops_path, class: 'btn btn-outline-secondary' %>
                  </li>
                  <li>
                    <%= link_to "ブログ一覧", blogs_path, class: 'btn btn-outline-secondary' %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
            <% end %>
        </div>
      </div>
    </nav>
    <div class="my-2 text-center">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
    </div>
    <div class="my-2 text-center">
      <p id="notice"></p>
    </div>
    <%= yield %>
  </body>
</html>
