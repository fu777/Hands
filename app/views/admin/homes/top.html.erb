<div class="container">
  <div class="row">
    <div class="col-12 col-sm-12">
      <div class="row d-flex justify-content-center my-3">
        <h4>注文履歴一覧</h4>
      </div>
      <div class="row d-flex justify-content-center my-3">
        <div class="table-responsive">
          <table class="table table-bordered border-dark" style="width: 1140px;">
            <thead class="table-bordered bg-light">
              <tr>
                <th>注文日</th>
                <th>購入者</th>
                <th>配送先</th>
                <th>注文商品</th>
                <th>注文個数</th>
                <th>ステータス</th>
                <th>注文詳細</th>
              </tr>
            </thead>
            <% @orders.each do |order| %>
            <tbody>
              <tr>
                <td><%= order.created_at.to_s(:ymd) %></td>
                <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
                <td>
                  〒<%= order.postal_code %><br>
                  <%= order.address %><br>
                  <%= order.name %>
                </td>
                <td>
                  <% order.order_details.each do |order_detail| %>
                    <%= order_detail.item.name %>
                  <% end %>
                </td>
                <td><%= order.order_details.count %></td>
                <td><%= order.status_i18n %></td>
                <td><%= link_to "表示する", admin_order_path(order), class: 'orange_out_btn' %></td>
              </tr>
            </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
