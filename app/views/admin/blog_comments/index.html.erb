<div class="container">
  <div class="row">
    <div class="col-12 col-sm-12">
      <div class="row d-flex justify-content-center my-3">
        <h4>ブログコメント一覧</h4>
      </div>
      <div class="row d-flex justify-content-center my-3">
        <div class="table-responsive">
          <table class="table table-bordered border-dark" style="width: 1140px;">
            <thead class="table-bordered bg-light">
              <tr>
                <th>ブログ名</th>
                <th>投稿したユーザー</th>
                <th>コメントしたユーザー</th>
                <th>コメント</th>
                <th></th>
              </tr>
            </thead>
            <% @blog_comments.each do |blog_comment| %>
            <tbody>
              <tr>
                <td>
                  <%= link_to admin_blog_path(blog_comment.blog), class: 'text-dark' do %>
                    <%= blog_comment.blog.title %>
                  <% end %>
                </td>
                <td>
                  <%= link_to admin_customer_path(blog_comment.blog.customer), class: 'text-dark' do %>
                    <%= blog_comment.blog.customer.user_name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to admin_customer_path(blog_comment.customer), class: 'text-dark' do %>
                    <%= blog_comment.customer.user_name %><br>
                  <% end %>
                </td>
                <td><%= blog_comment.comment %></td>
                <td><%= link_to "削除", admin_blog_comment_path(blog_comment), method: :delete, "data-confirm" => "本当に消しますか？", class: 'text-dark' %></td>
              </tr>
            </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
