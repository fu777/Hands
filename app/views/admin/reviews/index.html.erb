<div class="container">
  <div class="row">
    <div class="col-12 col-sm-12">
      <div class="row d-flex justify-content-center my-3">
        <h4>レビュ一覧</h4>
      </div>
      <div class="row d-flex justify-content-center my-3">
        <div class="table-responsive">
          <table class="table table-bordered border-dark" style="width: 1140px;">
            <thead class="table-bordered bg-light">
              <tr>
                <th>作品名</th>
                <th>ショップ</th>
                <th>レビューしたユーザー</th>
                <th>レビューコメント</th>
                <th></th>
              </tr>
            </thead>
            <% @reviews.each do |review| %>
            <tbody>
              <tr>
                <td>
                  <%= link_to item_path(review.item.id), class: 'text-dark' do %>
                    <%= review.item.name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to shop_path(review.item.shop.id), class: 'text-dark' do %>
                    <%= review.item.shop.name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to admin_customer_path(review.customer.id), class: 'text-dark' do %>
                    <%= review.customer.user_name %>
                  <% end %>
                </td>
                <td><%= review.review_comment %></td>
                <td><%= link_to "削除する", admin_review_path(review.id), method: :delete, "data-confirm" => "本当に消しますか？", class: 'text-dark' %></td>
              </tr>
            </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
