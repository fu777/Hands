<div class="container">
  <div class="row col-12 d-flex justify-content-center my-3">
    <h2 class="bg-light px-3"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
  </div>
  <div class="row offset-2 my-3">
    <div class="col-10">
      <div class="my-3">
        <div class="form-group">
        <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
          <%= render 'public/customers/customer_error', customer: @customer %>
          <div class="row field my-3">
            <%= f.label "id", "会員ID", class: 'col-4' %>
            <%= @customer.id %>
          </div>
          <div class="row field my-3">
            <%= f.label "氏名", class: 'col-4' %>
            <%= f.label "(姓)　", class: 'mr-2' %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和" %>
            <%= f.label "(名)　", class: 'mx-2' %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子" %>
          </div>
          </div>
          <div class="row field my-3">
            <%= f.label "フリガナ", class: 'col-4' %>
            <%= f.label "(セイ)", class: 'mr-2' %>
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ" %>
            <%= f.label "(メイ)", class: 'mx-2' %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ" %>
          </div>
          <div class="row field my-3">
            <%= f.label "郵便番号", class: 'col-4' %>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %>
          </div>
          <div class="row field my-3">
            <%= f.label "住所", class: 'col-4' %>
            <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町０－０" %>
          </div>
          <div class="row field my-3">
            <%= f.label "電話番号", class: 'col-4' %>
            <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "0000000000" %>
          </div>
          <div class="row field my-3">
            <%= f.label "メールアドレス", class: 'col-4' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@exsample.com" %>
          </div>
          <div class="row form-check my-3">
            <%= f.label "会員ステータス", class: 'col-4' %>
            <%= f.radio_button :is_deleted, "false", class: 'align-baseline' %>
            <%= f.label :is_deleted, "有効", class: 'mx-2' %>
            <%= f.radio_button :is_deleted, "true", class: 'align-baseline' %>
            <%= f.label :is_deleted, "無効", class: 'mx-2' %>
          </div>
          <div class="actions col-10 my-2 text-center">
            <%= f.submit "編集内容を保存", class: 'btn btn-outline-success rounded-pill mr-2' %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
