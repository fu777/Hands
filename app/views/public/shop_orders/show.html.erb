<h1>注文履歴詳細</h1>

<table>
  <tbody>
    <tr>
      <th>購入者</th>
      <td>
        <%= @order.customer.last_name %> <%= @order.customer.first_name %>
      </td>
    </tr>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.to_s(:ymd) %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td><%= @order.postal_code %><%= @order.address %><br><%= @order.name %></td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
    <% if Order.find_by(params[:status]) && (@order.status == "waiting_for_delivery") %>
      <%= form_with model: [@shop, @order], url: shop_order_path(@order), method: :patch do |f| %>
        <th><%= f.label :status, "注文ステータス" %></th>
        <td><%= @order.status_i18n %></td>
        <%= f.hidden_field :status, :value => "receipt_confirmation" %>
        <td><%= f.submit "配送しました" %></td>
      <% end %>
    <% else %>
        <th>注文ステータス</th>
        <td><%= @order.status_i18n %></td>
    <% end %>
    </tr>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <% @order_details.each do |order_detail| %>
  <tbody>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.price.to_s(:delimited) %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.subtotal.to_s(:delimited) %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<table>
  <tbody>
    <tr>
      <th>商品合計</th>
      <td><%= @total.to_s(:delimited) %>円</td>
    </tr>
    <tr>
      <th>送料</th>
      <td><%= @order.shipping_cost.to_s(:delimited) %>円</td>
    </tr>
    <tr>
      <th>請求金額合計</th>
      <td><%= @order.total_payment.to_s(:delimited) %>円</td>
    </tr>
  </tbody>
</table>
