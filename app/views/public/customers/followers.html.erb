<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h4 class="my-3">
        <i class="fas fa-user-friends"></i> 
        <%= link_to my_page_path(@customer), class: 'text-dark' do %>
          <%= @customer.user_name %>さん
        <% end %>
        のフォロー(<%= @customers.count %>件)
      </h4>
    </div>
    <div class="col-12 d-flex justify-content-center mb-3">
      <%= form_with model: @relationships, url: followers_path, method: :get do |f| %>
        <%= f.hidden_field :customer_id, :value => params[:customer_id] %>
        <%= f.submit "フォロー", class: 'mr-1 btn btn-outline-warning' %>
      <% end %>
      <%= form_with model: @relationships, url: followings_path, method: :get do |f| %>
        <%= f.hidden_field :customer_id, :value => params[:customer_id] %>
        <%= f.submit "フォロワー", class: 'ml-1 btn btn-outline-warning' %>
      <% end %>
    </div>
    <div class="col-12 container">
      <div class="row d-flex justify-content-start">
      <%= render 'public/customers/customer_list', customers: @customers %>
  </div>
</div>

