<div class="container">
  <div class="row col-12 my-3 d-flex justify-content-center ml-3">
    <h2 class="bg-light px-3">会員の方はこちらからログイン</h2>
  </div>
  <div class="row my-3 d-flex justify-content-center">
    <div class="form-group col-12">
    <%= form_with model: @customer, url: customer_session_path do |f| %>
      <div class="field my-2 d-flex justify-content-center col-12">
        <%= f.label "メールアドレス", class: 'col-lg-2 col-sm-4' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@exsample.com" %>
      </div>
      <div class="field my-2 d-flex justify-content-center col-12">
        <%= f.label "パスワード", class: 'col-lg-2 col-sm-4' %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="field col-12 my-2 text-center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>
      <div class="actions col-12 my-2 text-center">
        <%= f.submit "ログイン", class: 'btn btn-outline-primary rounded-pill' %>
      </div>
    <% end %>
    </div>

<%= render "public/shared/links" %>
