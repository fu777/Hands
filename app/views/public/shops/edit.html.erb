<h1>ショップ編集</h1>

<%= form_with model: @shop, url: shop_path, method: :patch do |f| %>

<%= render 'shop_error', shop: @shop %>

  <%= f.label "ショップアイコン画像" %>
  <%= f.file_field :shop_icon_image, accept: "image/*" %><br>
  <%= f.label "ショップヘッダー画像" %>
  <%= f.file_field :shop_image, accept: "image/*" %><br>
  <%= f.label "ショップ名" %>
  <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ショップ名" %><br>
  <%= f.label "ショップ説明" %>
  <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", placeholder: "ここにショップ説明を入力してください。" %><br>
  <%= f.label "ショップステータス" %>
  <%= f.radio_button :is_active, "true" %>
  <%= f.label :is_active, "開店中" %>
  <%= f.radio_button :is_active, "false" %>
  <%= f.label :is_active, "閉店中" %><br>
  <%= f.submit "変更を保存" %>
<% end %>
