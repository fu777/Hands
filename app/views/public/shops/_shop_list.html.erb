      <% shops.each do |shop| %>
        <div class="col-lg-3 col-sm-6">
          <div class="card mx-auto my-3 shadow">
            <%= link_to shop_path(shop) do %>
              <%= image_tag shop.get_shop_icon_image.variant(gravity: :center, resize: "230x150^", crop: "230x150+0+0").processed, class: "card-img-top" %>
            <% end %>
            <%= render 'public/favourite_shops/favourite_shop', shop: shop %>
            <div class="card-body">
              <div class="row">
                <div class="col-3 text-center">
                  <%= link_to my_page_path(shop.customer) do %>
                    <%= image_tag shop.customer.get_image.variant(gravity: :center, resize: "50x50^", crop: "50x50+0+0").processed, class: "rounded-circle" %>
                  <% end %>
                </div>
                <div class="col-8 text-center">
                  <%= link_to shop_path(shop), class: "text-dark" do %>
                  <p class="card-title">
                    <%= shop.name %>
                  </p>
                  <% end %>
                  <p class="card-text">
                    <%= link_to my_page_path(shop.customer), class: "text-dark" do %>
                      <%= shop.customer.user_name %>
                    <% end %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
