<div class="container my-3">
  <div class="row">
    <div class="col-12 d-flex justify-content-center">
      <h4 class="font-weight-bold"><%= @blog.title %></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-11 d-flex justify-content-end">
      <%= link_to my_page_path(@blog.customer.id), class: 'text-dark mr-2' do %>
        <%= @blog.customer.user_name %>
      <% end %>
      <%= @blog.created_at.to_s(:ymd) %>
    </div>
  </div>
  <div class="row">
    <div class="col-12 d-flex justify-content-end">
      <% @blog.get_blog_images.each do |blog_image| %>
        <div id="tall">
          <div id="theTarget">
            <%= image_tag blog_image, size: "300x300" %>
          </div>
        </div>
      <% end %>
    </div>


<%= @blog.body %>
<br>

<% unless @blog.item_id == nil %>
  <%= image_tag @blog.item.get_item_images.first.variant(resize: "150x150").processed %><br>
  <%= link_to admin_item_path(@blog.item.id) do %>
    <%= @blog.item.name %>
  <% end %>
  <br>
  ¥<%= @blog.item.price.to_s(:delimited) %>円<br>

  <%= image_tag @item.shop.get_shop_icon_image(100,100) %><br>
  <%= link_to shop_path(@item.shop.id) do %>
    <%= @item.shop.name %>
  <% end %>
<% end %>

<% if customer_signed_in? %>
<br>
  <% if @blog.customer == current_customer %>
    <%= link_to "編集する", edit_blog_path(@blog) %>
    <%= link_to "削除", blog_path(@blog), method: :delete %>
  <% end %>
<br>

  <% if @blog.was_favourite_blog_by?(current_customer) %>
    <p>
      <%= link_to blog_favourite_blogs_path(@blog), method: :delete do %>
        ♥<%= @blog.favourite_blogs.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to blog_favourite_blogs_path(@blog), method: :post do %>
        ♡<%= @blog.favourite_blogs.count %> いいね
      <% end %>
    </p>
  <% end %>
<% else %>
  ♥<%= @blog.favourite_blogs.count %> いいね
<% end %>

<div>
  <p>コメント件数：<%= @blog.blog_comments.count %></p>
  <% @blog.blog_comments.each do |blog_comment| %>
    <p><%= image_tag blog_comment.customer.get_image %></p>
    <%= blog_comment.customer.user_name %>
    <%= l blog_comment.created_at, format: :long %><%= blog_comment.comment %>
    <% if customer_signed_in? %>
      <% if blog_comment.customer == current_customer %>
        <%= link_to "削除", blog_blog_comment_path(blog_comment.blog, blog_comment), method: :delete %>
      <% end %>
    <% end %>
  <% end %>
</div>

<div>
<% if customer_signed_in? %>
  <%= render 'blog_comment_error', blog_comment: @blog_comment %>

  <%= form_with model: [@blog, @blog_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
<% end %>
</div>

