<div class="container">
  <div class="row col-12 my-3 d-flex justify-content-center">
    <h2 class="bg-light px-3">新規会員登録</h2>
  </div>
  <div class="row offset-lg-1 my-3">
    <div class="col-lg-11 col-sm-12">
      <div class="my-3 ml-3">
        <div class="form-group">
        <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
          <div class="field my-2">
            <%= f.label "ユーザーネーム", class: 'col-lg-4 col-sm-6' %>
            <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name", placeholder: "ニックネーム" %>
          </div>
          <div class="field my-2">
            <%= f.label "氏名", class: 'col-lg-4 col-sm-12' %>
            <%= f.label "(姓)　" %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和", class: 'mr-3' %>
            <%= f.label "(名)　" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子" %>
          </div>
          <div class="field my-2">
            <%= f.label "フリガナ", class: 'col-lg-4 col-sm-12' %>
            <%= f.label "(セイ)" %>
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ", class: 'mr-3' %>
            <%= f.label "(メイ)" %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ" %>
          </div>
          <div class="field my-2">
            <%= f.label "メールアドレス", class: 'col-lg-4 col-sm-6' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@exsample.com" %>
          </div>
          <div class="field my-2">
            <%= f.label "郵便番号(ハイフンなし)", class: 'col-lg-4 col-sm-6' %>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %>
          </div>
          <div class="field my-2">
            <%= f.label "住所", class: 'col-lg-4 col-sm-6' %>
            <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町０－０" %>
          </div>
          <div class="field my-2">
            <%= f.label "電話番号(ハイフンなし)", class: 'col-lg-4 col-sm-6' %>
            <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "0000000000" %>
          </div>
          <div class="field my-2">
            <%= f.label "パスワード(#{@minimum_password_length}文字以上)", class: 'col-lg-4 col-sm-6' %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <div class="field my-2">
            <%= f.label "パスワード(確認用)", class: 'col-lg-4 col-sm-6' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div class="actions col-lg-11 col-sm-12 my-2 text-center">
            <%= f.submit "新規登録", class: 'btn btn-outline-success rounded-pill ml-4' %>
          </div>
      <% end %>

<%= render "public/shared/links" %>
